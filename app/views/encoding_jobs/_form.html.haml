= form_for @encoding_job do |f|
  - if @encoding_job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@encoding_job.errors.count, "error")} prohibited this encoding_job from being saved:"
      %ul
        - @encoding_job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :video
    = f.file_field :video
  .field
    = f.label :format
    = f.text_field :format
  .field
    = f.label :request_id
    = f.text_field :request_id
  .actions
    = f.submit 'Save'
